{
    "name": "dndroller",
    "version": "1.0.0",
    "description": "- commit subject lines should be 50 characters or less\r - begin with an emoji write them with a keyword wrapped in colons `:book:` :book:\r - followed by a verb in the imperative ie: add, remove, compile\r - ending with a reference to the relevant issue number with a hashtag and in parentheses ie: `(#24)`",
    "main": "src/index.jsx",
    "scripts": {
        "start": "parcel src/index.html",
        "build": "npm run format && parcel build src/index.html --public-url ./",
        "format": "npm run format-css && npm run format-js",
        "format-css": "prettier --write src/styles/**/*.{css,scss} ",
        "format-js": "prettier --write src/**/*.{js,jsx}"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AndreBClark/dndroller.git"
    },
    "keywords": [],
    "author": "Andre Clark",
    "license": "GPL-3.0",
    "pwaManifest": {
        "name": "Tabletop Companion",
        "shortName": "D&D Companion",
        "startURL": "./",
        "theme": "#3c366b",
        "display": "standalone",
        "generateIconOptions": {
            "baseIcon": "./src/assets/d20.svg",
            "sizes": [
                192,
                384,
                512
            ],
            "genFavicons": true
        }
    },
    "bugs": {
        "url": "https://github.com/AndreBClark/dndroller/issues"
    },
    "homepage": "https://github.com/AndreBClark/dndroller# readme ",
    "alias": {
        "react": "preact/compat",
        "react-dom/test-utils": "preact/test-utils",
        "react-dom": "preact/compat"
    },
    "dependencies": {
        "@reach/router": "^1.2.1",
        "@svgr/parcel-plugin-svgr": "^5.0.1",
        "autoprefixer": "^9.7.3",
        "eslint": "^6.8.0",
        "eslint-config-standard-preact": "^1.1.6",
        "postcss-cli": "^6.1.3",
        "postcss-import": "^12.0.1",
        "postcss-modules": "^1.4.1",
        "postcss-preset-env": "^6.7.0",
        "preact": "^10.2.1"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.0.4",
        "cssnano": "^4.1.10",
        "cssnano-preset-advanced": "^4.0.7",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-pwa-manifest": "^2.9.1",
        "polished": "^3.4.4",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "prettier-eslint-cli": "^5.0.0",
        "sass": "^1.25.0",
        "stylelint": "^13.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-prettier": "^1.1.2",
        "tailwind": "^4.0.0",
        "tailwindcss": "^1.1.4"
    }
}
