{
    "name": "dndroller",
    "version": "1.0.0",
    "description": "Dice Rolling app for Playing Table Top Games ",
    "main": "src/index.jsx",
    "scripts": {
        "start": "parcel src/index.html",
        "reset": "powershell Remove-Item –path node_modules –recurse; Remove-Item –path .cache –recurse; Remove-Item –path dist –recurse; npm i",
        "build": "parcel build src/index.html --public-url ./",
        "format": "npm run format-css && npm run format-js",
        "format-css": "prettier --write src/styles/**/*.{css,scss}",
        "format-js": "prettier --write src/**/*.{js,jsx}"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AndreBClark/companiondice.git"
    },
    "keywords": [],
    "author": "Andre Clark",
    "license": "GPL-3.0",
    "pwaManifest": {
        "name": "Companion Dice Tabletop Games",
        "shortName": "Dice Companion",
        "startURL": "./",
        "theme": "#3c366b",
        "display": "standalone",
        "generateIconOptions": {
            "baseIcon": "./src/assets/thumbnail.png",
            "sizes": [
                192,
                384,
                512
            ],
            "genFavicons": true
        }
    },
    "bugs": {
        "url": "https://github.com/AndreBClark/companiondice/issues"
    },
    "homepage": "https://github.com/AndreBClark/companiondice# readme ",
    "alias": {
        "react": "preact/compat",
        "react-dom/test-utils": "preact/test-utils",
        "react-dom": "preact/compat"
    },
    "dependencies": {
        "@reach/router": "^1.2.1",
        "autoprefixer": "^9.7.3",
        "eslint": "^6.8.0",
        "eslint-config-standard-preact": "^1.1.6",
        "parcel-plugin-pwa-manifest": "^3.0.10",
        "postcss-import": "^12.0.1",
        "postcss-modules": "^1.4.1",
        "postcss-preset-env": "^6.7.0",
        "preact": "^10.2.1",
        "preact-helmet": "^4.0.0-alpha-3",
        "prop-types": "^15.7.2",
        "react-input-number": "^5.0.19",
        "styled-components": "^5.1.1"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^2.0.4",
        "@svgr/parcel-plugin-svgr": "^5.4.0",
        "cssnano": "^4.1.10",
        "cssnano-preset-advanced": "^4.0.7",
        "parcel-bundler": "^1.12.4",
        "polished": "^3.4.4",
        "postcss-cli": "^6.1.3",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "prettier-eslint-cli": "^5.0.0",
        "sass": "^1.25.0",
        "stylelint": "^13.0.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-prettier": "^1.1.2",
        "tailwindcss": "^1.6.0"
    },
    "cache": {
        "disablePlugin": false,
        "inDev": true,
        "strategy": "default",
        "clearDist": true
    }
}
