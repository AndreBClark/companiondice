{
  "private": true,
  "name": "luckbringer",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src --fix",
    "format": "npm run format-css && npm run format-js",
    "format-css": "prettier --write src/styles/**/*.{css,scss}",
    "format-js": "prettier --write src/**/*.{js,jsx}",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^6.0.1",
    "eslint-config-preact": "^1.1.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "node-sass": "^4.14.1",
    "polished": "^3.6.5",
    "preact-cli": "^3.0.0",
    "preact-cli-tailwind": "^2.0.0",
    "prettier": "^1.19.1",
    "sass-loader": "^9.0.3",
    "sirv-cli": "1.0.3",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2",
    "tailwindcss": "^1.7.3"
  },
  "dependencies": {
    "preact": "^10.3.2",
    "preact-cli-postcss": "^1.1.1",
    "preact-cli-svg-loader": "^1.1.0",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
